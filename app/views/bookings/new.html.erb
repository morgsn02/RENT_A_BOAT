<div class="formnewboat">
  <div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h1>Réserver et payer</h1>
            <div class="card">
                <h5 class="text-center mb-4">Choisissez la date du début et de fin de réservation</h5>
                  <%= simple_form_for(@booking, as: :booking, method: :post, url: boat_bookings_path) do |f| %>
                  <form class="form-card">
                    <div class="row justify-content-between text-left">
                      <div class="form-group col-sm-6 flex-column d-flex">
                        <%= f.input :date_start, as: :date, html5: true %>
                      </div>
                      <div class="form-group col-sm-6 flex-column d-flex">
                        <%= f.input :date_end, as: :date, html5: true %>
                      </div>
                      <div class="row justify-content-center">
                      <div class="form-group col-sm-6 ">
                        <%= f.submit 'Validez votre réservation' %>
                        <% end %>
                      </div>
                      </div>
                    </div>
                  </form>
            </div>
        </div>
    </div>
  </div>
</div>
                    </div>
