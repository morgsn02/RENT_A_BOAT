<h1 class="p-1 text-center">MY BOOKINGS!</h1>
<%  %>
<% if  @my_bookings.empty? %>
Vous n'avez pas de réservation...
<% else %>
  <div class="resa-container" style="margin-bottom: 200px;">
    <% @my_bookings.each do |booking| %>
      <div>
        <%= link_to boat_path(booking.boat) do %>
          <div class="card-trip">
            <% if boat.photo.attached? %>
              <%= cl_image_tag boat.photo.key, height: 300, width: 400, crop: :fill %>
            <% else %>
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
            <% end %>
            <h6 class="p-1 text-center"><%= booking.boat.name_boat %></h6>
            <div class="card-trip-infos">
              <div>
                  <p>Année de construction:<%= booking.boat.construction_year %></p>
                  <p>Puissance: <%= booking.boat.puissance %></p>
                  <p>Nombre de personnes: <%= booking.boat.max_person %></p>
              </div>
            <h2>Prix/jour</h2><h2 class="card-trip-pricing"><%= booking.boat.price_per_day%> €</h2>
            </div>
          </div>
        <% end %>
      </div>
      <div class="resa-infos">
        <div class="pb-2"><%= link_to booking.boat.name_boat, booking_path(booking) %></div>
        <div class="pb-2">Date de début:</div>
        <div class="pb-2"><%= booking.date_start %></div>
        <div class="pb-2">Date de fin:</div>
        <div class="pb-2"><%= booking.date_end %></div>

        <div><%= link_to "Delete", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'contient-img-trash' %></div>
      </div>
    <% end %>
  </div>
<% end %>
